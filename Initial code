
/* *****************
* Basic calculator
* (-+/*)
*******************/


#include <stdio.h>
#include <stdlib.h>

int main()
{
    int functionLocation,i;
    double variableOne, variableTwo,variableThree;
    char function,input[100], *parsed;

    //get user input
    printf("Calculator. Please enter the equation.\n");
    fgets(input,sizeof(input),stdin);

    //determine first number, determine function, determine second number

    variableOne=strtod(input,&parsed);
    function=parsed[0];
    parsed++;
    variableTwo=strtod(parsed,&parsed);
    
    //Outputs the required equations to the screen
    switch(function)
    {
    case '+': printf("%lf\n",variableOne+variableTwo); break;
    case '-': printf("%lf\n",variableOne-variableTwo); break;
    case '*': printf("%lf\n",variableOne*variableTwo); break;
    case '/': if(variableTwo!=0){printf("%f\n",variableOne/variableTwo);} break;
    default : printf("Inputs not recognised.\n");
    }

return(0);
}

